<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h4>投稿数の前日比・先週比</h4>
      <div class="col-10">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="width: 30%">今日の投稿数</th>
              <th style="width: 30%">昨日の投稿数</th>
              <th style="width: 40%">前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @books.created_today.count %></td>
              <td><%= @books.created_yesterday.count %></td>
              <% if @books.created_yesterday.count == 0 %>
                <td>前日の投稿はなし</td>
              <% else %>
                <td>
                  <%= (@books.created_today.count / @books.created_yesterday.count.to_f * 100).round %> %
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th style="width: 30%">今週の投稿数</th>
              <th style="width: 30%">先週の投稿数</th>
              <th style="width: 40%">先週比</th>
            </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @books.created_this_week.count %></td>
            <td><%= @books.created_last_week.count %></td>
            <% if @books.created_last_week.count == 0 %>
              <td>先週の投稿はなし</td>
            <% else %>
              <td>
                <%= (@books.created_this_week.count / @books.created_last_week.count.to_f * 100).round %> %
              </td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-10">
        <%= form_with url: user_search_path(@user), method: :get, local: false do |f| %>
          <%= f.date_field :created_at %>
          <%= f.submit '検索', class: 'btn btn-primary' %>
        <% end %>
        
        <div id="search_result" class="col-4">
          <% if @search_book.present? %>
            <%= render 'search', search_book: @search_book %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
